<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SapphireNotes.ViewModels;assembly=SapphireNotes"
        x:Class="SapphireNotes.Views.ErrorWindow"
        Title="{Binding Title}">

  <Window.Styles>
    <StyleInclude Source="/Styles/Window.axaml" />
    <StyleInclude Source="/Styles/Button.axaml" />
    
    <Style Selector="Border">
      <Setter Property="Padding" Value="0 0 0 10" />
    </Style>
    
    <Style Selector="TextBlock">
      <Setter Property="MaxWidth" Value="500" />
      <Setter Property="Foreground" Value="{StaticResource WhiteColor}" />
      <Setter Property="FontSize" Value="{StaticResource FontSize}" />
    </Style>
  </Window.Styles>

  <Design.DataContext>
    <vm:ErrorViewModel/>
  </Design.DataContext>

  <StackPanel>
    <Border>
      <TextBlock Text="{Binding Message, Mode=OneTime}" TextWrapping="Wrap" />
    </Border>

    <Button Name="okButton" HorizontalAlignment="Right" Classes="button primary">Okay</Button>
  </StackPanel>

</Window>
